{
  "name": "app-store-api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "https://github.com/joorgeroberto/app-store-api.git",
  "author": "iago fagundes <iago.fagundes@outlook.com>, jorge de carvalho <jorgercj@dcomp.ufs.br>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:src && yarn build:orm",
    "build:src": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "build:orm": "babel ormconfig.ts --extensions \".js,.ts\" --out-dir . --copy-files --no-copy-ignored",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "remove:orm": "test -f ormconfig.js && (echo removing ormconfig.js &&  rm ormconfig.js) || echo starting server",
    "start": "yarn build && yarn start:prod",
    "start:dev": "yarn remove:orm && ts-node-dev -r tsconfig-paths/register --respawn --inspect --transpile-only --ignore-watch node_modules --no-notify src/index.ts",
    "start:prod": "node dist/index.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky install",
    "typeorm": "ts-node-dev -r tsconfig-paths/register node_modules/typeorm/cli.js",
    "typeorm:generate": "ts-node-dev -r tsconfig-paths/register node_modules/typeorm/cli.js migration:generate -n",
    "typeorm:run": "ts-node-dev -r tsconfig-paths/register node_modules/typeorm/cli.js migration:run",
    "typeorm:revert": "ts-node-dev -r tsconfig-paths/register node_modules/typeorm/cli.js migration:revert"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently -r \"yarn lint\" \"yarn tsc --noEmit\"",
      "post-merge": "yarn"
    }
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.2.0",
    "typeorm": "^0.2.41"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/node": "^7.14.9",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/plugin-proposal-private-methods": "^7.14.5",
    "@babel/plugin-proposal-private-property-in-object": "^7.14.5",
    "@babel/plugin-transform-flow-strip-types": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/node": "^16.0.0",
    "@types/reflect-metadata": "^0.1.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "prettier": "^2.3.2",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
